.model-capabilities {
    margin-top: 6px;
    font-size: .8rem;
    display: grid;
    grid-template-columns: 1fr 1fr;

    > div {
        opacity: .8;
        margin-bottom: 2px;

        > i {
            display: inline-block;
            width: 18px;
            font-size: 1rem;
        }
    }
}